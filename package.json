{
  "name": "react-social-sharing",
  "description": "React Social Sharing Components ( No extra JS )",
  "author": "Sara Vieira",
  "version": "1.3.2",
  "scripts": {
    "start": "catalog start docs",
    "test": "jest && npm run test:lint",
    "posttest": "npm run format",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:lint": "eslint . --ignore-path .gitignore",
    "build": "catalog build docs",
    "dist:es6":
      "del-cli ./dist-es6 && cross-env BABEL_ENV=es6 babel ./src --out-dir ./dist-es6",
    "dist:modules":
      "del-cli ./dist-modules && cross-env BABEL_ENV=modules babel ./src --out-dir ./dist-modules",
    "preversion": "npm run test",
    "prepublishOnly": "npm run dist:es6 && npm run dist:modules",
    "postinstall": "node lib/post_install.js",
    "format": "prettier --write '**/*.{js,css,md}'",
    "precommit": "lint-staged"
  },
  "main": "dist-modules",
  "module": "dist-es6",
  "jsnext:main": "dist-es6",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.3",
    "babel-jest": "^21.2.0",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.10",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "catalog": "^3.2.1",
    "cross-env": "^5.1.1",
    "del-cli": "^1.1.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.1",
    "eslint": "^4.13.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.5.1",
    "gh-pages": "^1.1.0",
    "git-prepush-hook": "^1.0.2",
    "jest-styled-components": "^5.0.0",
    "lint-staged": "^6.1.1",
    "prettier": "^1.10.2",
    "purecss": "^1.0.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-github-corner": "^2.0.0",
    "react-test-renderer": "^16.2.0",
    "sync-exec": "^0.6.2",
    "webpack": "^3.10.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/SaraVieira/react-social-sharing.git"
  },
  "homepage": "https://github.com/SaraVieira/react-social-sharing/",
  "bugs": {
    "url": "https://github.com/SaraVieira/react-social-sharing/issues"
  },
  "jest": {
    "setupFiles": ["./lib/jestsetup.js"],
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "collectCoverage": true,
    "moduleFileExtensions": ["js", "jsx"],
    "moduleDirectories": ["node_modules", "packages"]
  },
  "keywords": ["react", "reactjs", "boilerplate"],
  "license": "MIT",
  "pre-push": ["test"],
  "dependencies": {
    "jest": "^22.3.0",
    "styled-components": "^3.1.6",
    "styled-is": "^1.1.2"
  }
}
